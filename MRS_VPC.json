{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Deploys a VPC (CIDR /23) with two subets (CIDR /24) AZ's",
    "Parameters": {
        "VPCCidrRange": {
            "Description": "The CIDR range to use (must be unique and approved by CSL)",
            "AllowedPattern": "\\b(?:\\d{1,3}\\.){3}\\d{1,3}\\b\\/23",
            "Type": "String"
        },
        "PrivateSubnetACidrRange": {
            "Description": "The CIDR range to use (must be unique and approved by CSL)",
            "AllowedPattern": "\\b(?:\\d{1,3}\\.){3}\\d{1,3}\\b\\/24",
            "Type": "String"
        },
        "PrivateSubnetBCidrRange": {
            "Description": "The CIDR range to use (must be unique and approved by CSL)",
            "AllowedPattern": "\\b(?:\\d{1,3}\\.){3}\\d{1,3}\\b\\/24",
            "Type": "String"
        },
        "Owner": {
            "Description": "The VPC owner and authority",
            "AllowedPattern": "\\w*\\.\\w*\\@\\w{2}\\.bp\\.com",
            "Type": "String"
        },
        "DomainName": {
            "Description": "Domain Name for VPC",
            "Type": "String",
            "AllowedPattern": "(\\w*\\.bp\\.com)",
            "ConstraintDescription": "must be a valid Domain XX.XX.XXX i.e. cloud.bp.com or aws.cloud.bp.com"
        },
        "CSLDomainIPs": {
            "Description": "CSL Active Directory IP's (format: '1.2.3.4, 5.6.7.8')",
            "Type": "String",
            "AllowedPattern": "(\\b(?:\\d{1,3}\\.){3}\\d{1,3})(\\,\\s*(?:\\d{1,3}\\.){3}\\d{1,3})*"
        }
    },
    "Resources": {
        "VPC": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": {
                    "Ref": "VPCCidrRange"
                },
                "Tags": [
                    {
                        "Key": "Owner",
                        "Value": {
                            "Ref": "Owner"
                        }
                    }
                ]
            }
        },
        "PrivateSubnetA": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                },
                "CidrBlock": {
                    "Ref": "PrivateSubnetACidrRange"
                },
                "AvailabilityZone" : "eu-west-1a",
                "Tags": [
                    {
                        "Key": "Owner",
                        "Value": {
                            "Ref": "Owner"
                        }
                    }
                ]
            }
        },
        "PrivateSubnetB": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                },
                "AvailabilityZone" : "eu-west-1b",
                "CidrBlock": {
                    "Ref": "PrivateSubnetBCidrRange"
                },
                "Tags": [
                    {
                        "Key": "Owner",
                        "Value": {
                            "Ref": "Owner"
                        }
                    }
                ]
            }
        },
        "PrivateRouteTable": {
            "Type": "AWS::EC2::RouteTable",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                },
                "Tags": [
                    {
                        "Key": "Owner",
                        "Value": {
                            "Ref": "Owner"
                        }
                    }
                ]
            }
        },
        "PrivateSubnetARouteTableAssociation": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "PrivateSubnetA"
                },
                "RouteTableId": {
                    "Ref": "PrivateRouteTable"
                }
            }
        },
        "PrivateSubnetBRouteTableAssociation": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "PrivateSubnetB"
                },
                "RouteTableId": {
                    "Ref": "PrivateRouteTable"
                }
            }
        },
        "PrivateNetworkAcl": {
            "Type": "AWS::EC2::NetworkAcl",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                },
                "Tags": [
                    {
                        "Key": "Owner",
                        "Value": {
                            "Ref": "Owner"
                        }
                    },
                    {
                        "Key": "Network",
                        "Value": "Private"
                    }
                ]
            }
        },
        "InboundPrivateNetworkAclEntry": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "PrivateNetworkAcl"
                },
                "RuleNumber": "100",
                "Protocol": "-1",
                "RuleAction": "allow",
                "Egress": "false",
                "CidrBlock": {
                    "Ref": "VPCCidrRange"
                },
                "PortRange": {
                    "From": "0",
                    "To": "65535"
                }
            }
        },
        "OutBoundPrivateNetworkAclEntry": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "PrivateNetworkAcl"
                },
                "RuleNumber": "100",
                "Protocol": "-1",
                "RuleAction": "allow",
                "Egress": "true",
                "CidrBlock": {
                    "Ref": "VPCCidrRange"
                },
                "PortRange": {
                    "From": "0",
                    "To": "65535"
                }
            }
        },
        "VPNGateway": {
            "Type": "AWS::EC2::VPNGateway",
            "Properties": {
                "Type": "ipsec.1",
                "Tags": [
                    {
                        "Key": "Owner",
                        "Value": {
                            "Ref": "Owner"
                        }
                    }
                ]
            }
        },
        "AttachVpnGateway": {
            "Type": "AWS::EC2::VPCGatewayAttachment",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                },
                "VpnGatewayId": {
                    "Ref": "VPNGateway"
                }
            }
        },
        "DHCPOptionSet": {
             "Type" : "AWS::EC2::DHCPOptions",
             "Properties" : {
            "DomainName" : { "Ref" : "DomainName" },
            "DomainNameServers" : [ {"Ref" : "CSLDomainIPs" } ],
            "NtpServers" : [ { "Ref" : "CSLDomainIPs" } ]
            }
        }
    }
}